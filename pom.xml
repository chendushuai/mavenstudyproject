<?xml version="1.0" encoding="UTF-8"?>
<!-- 第一行是XML头，指定XML文档的版本和编码方式。 -->
<!-- project元素是所有pom.xml的根元素，还声明了一些POM相关的命名空间及XSD元素 -->
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <!-- modelVersion指定当前POM模型的版本，对于Maven 2及Maven 3来说，只能是4.0.0 -->
    <modelVersion>4.0.0</modelVersion>

    <!-- groupId定义了项目属于哪个组 -->
    <groupId>com.sschen</groupId>
    <!-- artifactId定义了当前Maven项目在组中唯一的ID -->
    <artifactId>maven-study-project</artifactId>
    <!-- version指定了项目当前的版本。SNAPSHOP意为快照，表示项目正在开发中 -->
    <version>1.0-SNAPSHOT</version>
    <!-- name -->
    <name>Maven Study Project</name>
</project>